
extends layout

block content
	head
		title= "Login Page"
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
		script(src='../javascripts/auth.js')
	body
		div(class='container')
			div(class="row justify-content-center align-items-center" style="height:100vh")
				div(class="col-4")
					div(class="card")
						div(class="card-body")
							// form(action="" autocomplete="off")
							div
									div(class="form-group")
										input(type="text" class="form-control" name="username" placeholder="username")
									div(class="form-group" id="password1")
										input(type="password" class="form-control" name="password" placeholder="password")
									button(class="btn btn-primary" type="" id="send-login") login
									div(class="d-inline form-check ml-5 pl-5")
										input(class="form-check-input" type="checkbox" value="" id="cb-register")
										label(class="form-check-label" for="cb-register") register
